@{ 
    ViewData["Title"] = "Anasayfa";
}
<!-- BEGIN PAGE TITLE-->
<h1 class="page-title">
    @*Blank Page Layout
    <small>blank page layout</small>*@
</h1>
<!-- END PAGE TITLE-->
<!-- END PAGE HEADER-->
